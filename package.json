{
  "name": "barebones",
  "version": "0.1.0",
  "description": "",
  "main": "src/server/app.js",
  "type": "module",
  "scripts": {
    "start": "npm run start:${NODE_ENV:-development}",
    "start:production": "npm run build; node src/server/app.js",
    "start:development": "concurrently \"npm:watch:test\" \"npm:watch:sass\" \"npm:watch:node\"",
    "test": "jest",
    "build": "npm run build:sass",
    "build:sass": "sass src/client/css:build/client/css",
    "watch:test": "npm run test -- --watchAll",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:node": "nodemon -e js,html src/server/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamhavel/barebones.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "express": "5.0.0-alpha.8",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "i18n": "^0.13.2",
    "moment": "^2.29.0",
    "mongoose": "^5.10.7",
    "nodemailer": "^6.4.13",
    "nunjucks": "^3.2.2",
    "prom-client": "^12.0.0",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "concurrently": "^5.3.0",
    "jest": "^26.5.0",
    "nodemon": "^2.0.4",
    "sass": "^1.26.11",
    "turbolinks": "^5.2.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "setupFiles": [
      "<rootDir>/src/server/config/jest.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
